<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/singleRankingView">
            <TextView
                    android:id="@+id/rankingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="1: xxxxx points"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/rankingTime"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Total time: xxx sec"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/rankingPoints"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Total points"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" android:layout_weight="1"
                        android:textAlignment="textEnd"/>
            </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rankingDateTime"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>