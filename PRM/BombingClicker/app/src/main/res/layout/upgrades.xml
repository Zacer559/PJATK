<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
          >
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/singleUpgradeView">

            <TextView
                    android:id="@+id/upgradeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Upgrade Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/upgradeCost"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Cost: 30 Points"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/upgradeLevel"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Level: 1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" android:layout_weight="1"
                        android:textAlignment="textEnd"/>
            </LinearLayout>
            <TextView
                    android:text="Will increase amount of points in every click by 2"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/upgrade_context" android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>